{
  "name": "server",
  "version": "1.0.0",
  "description": "API and Server",
  "main": "server.ts",
  "scripts": {
    "start": "nodemon src/application/server.ts",
    "seed:database": "ts-node scripts/seed-database.ts",
    "generate:types": "graphql-codegen",
    "test": "NODE_ENV=test TZ=UTC jest",
    "install:all": "npm install --no-optional && cd packages/client && npm install --no-optional && cd ../server && npm install --no-optional",
    "server:dev": "cd packages/server && npm start",
    "client:dev": "cd packages/client && npm start",
    "lint": "eslint \"**/*.{ts,js}\" --cache --fix",
    "format": "prettier --write \"**/*.{ts,js,json,graphql,gql,yaml,yml,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,graphql,gql,yaml,yml,md}\"",
    "prepare": "husky install",
    "build": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo-punit-patel/uniTryst.git"
  },
  "author": "Punit Patel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neo-punit-patel/uniTryst/issues"
  },
  "homepage": "https://github.com/neo-punit-patel/uniTryst#readme",
  "dependencies": {
    "@graphql-tools/schema": "^8.2.0",
    "@types/mongodb": "^4.0.7",
    "apollo": "^2.32.5",
    "apollo-boost": "^0.4.9",
    "apollo-server": "^3.3.0",
    "async-exit-hook": "^2.0.1",
    "dotenv": "^10.0.0",
    "graphql-codegen": "^0.4.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.1.1",
    "@apollo/client": "^3.6.9",
    "graphql": "^15.8.0",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.0",
    "@types/graphql": "14.5.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^14.11.5",
    "apollo-link-schema": "^1.2.5",
    "jest": "^27.2.0",
    "jest-auto-stub": "^1.0.8",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "@babel/plugin-syntax-jsx": "^7.18.6",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-testing-library": "^5.6.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run generate:types",
      "npm run format",
      "npm run lint",
      "git add ."
    ],
    "*.js": "eslint --cache --fix",
    "*.{ts,js,json,graphql,gql,yaml,yml,md}": "prettier --write"
  }
}
